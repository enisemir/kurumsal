{% block content %}
<div class="section">
    <div class="products-in-category-tabs-wrapper container">
        <div class="products-content">
            <div class="woocommerce product-listing columns-4">

                <div class="sidebar-shop-search toggle-sidebar-shop">
                    <form>
                        <input type="text" placeholder="Search product" /><a href="#"><i class="fa fa-search"></i></a>
                    </form>
                </div>
                <div class="sidebar-shop-col toggle-sidebar-shop">

                </div>
                <div class="desc-review-content tab-content clearfix">
                    <div id="1a" class="tab-pane active">
                        {% for i in renk %}
